<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
      }

      body {
        background: linear-gradient(45deg, #010758, #490d61);
        color: white;
      }

      h1 {
        font-size: 38px;
        text-decoration: underline;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
      }

      .nav-links {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .nav-links a {
        text-decoration: none;
        padding-left: 10px;
        color: white;
      }

      .nav-links a:hover {
        color: black;
      }

      .container {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-left: 70px;
      }
    </style>
  </head>
  <body>
    <h1>Photo Gallery App</h1>

    <nav class="nav-links">
      <a href="/">Home</a>
      <a href="/Gallery">Gallery</a>
    </nav>

    <div class="container mt-3 row row-cols-5">
      <% photos.forEach(photo=> { %>

      <div class="card col">
        <div class="col" style="width: 15rem">
          <img src="<%= photo.coverImage %>" class="card-img-top" alt="..." />
        </div>
      </div>

      <% }) %>
    </div>
  </body>
</html>
